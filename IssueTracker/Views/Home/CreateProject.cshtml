@using IssueTracker.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity
@model ProjectModel
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Create a Project";
}

@section Scripts2
{
    <link rel="stylesheet" href="../../dist/plugins/select2/css/select2.min.css">
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Enter Your Project Details:</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="inputName">Project Name:</label>
                            <input name="Name" type="text" id="inputName" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="inputDescription">Project Description:</label>
                            <textarea name="Description" id="inputDescription" class="form-control" rows="4"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="inputStatus">Status:</label>
                            <select name="Status" id="inputStatus" class="form-control custom-select">
                                <option selected disabled>Select a Status</option>
                                <option value="In Developement">In Development</option>
                                <option value="On Hold">On Hold</option>
                                <option value="Revising">Revising</option>
                                <option value="Completed">Completed</option>
                                <option value="Withdrawn">Withdrawn</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="inputClientCompany">Client Company:</label>
                            <input name="ClientCompany" type="text" id="inputClientCompany" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="inputLeader">Project Leader:</label>
                            <select name="ProjectLeader" id="inputLeader" class="form-control custom-select">
                                <option selected disabled>Select a Project Leader</option>
                                @foreach (ApplicationUser user in UserManager.Users)
                                {
                                    <option value=@user.Id>@(user.FirstName + " " + user.LastName)</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Select 1 or More Contributors:</label>
                            <div class="select2-green">
                                <select name="Contributors" class="select2" multiple="multiple" data-dropdown-css-class="select2-green" data-placeholder="Select a User" style="width: 100%;">
                                    @foreach (ApplicationUser user in UserManager.Users)
                                    {
                                        <option value=@user.Id>@(user.FirstName + " " + user.LastName)</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <a asp-controller="Home" asp-action="CreateProject" class="btn btn-secondary">Cancel</a>
                                <input type="submit" value="Create New Project" class="btn btn-success float-right" data-toggle="modal" data-target="#modal-success" data-backdrop="static" data-keyboard="false">
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<!-- /.content -->
<div class="modal fade" id="modal-success">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-success">
            <div class="modal-header">
                <h4 class="modal-title">Success!</h4>
            </div>
            <div class="modal-body">
                <p>Your project has been created.</p>
            </div>
            <div class="modal-footer justify-content-between">
                <a type="button" asp-controller="Home" asp-action="Index" class="btn btn-outline-light">Back to Dashboard</a>
                <a type="button" asp-controller="Home" asp-action="Projects" class="btn btn-outline-light">Your Projects</a>
            </div>
        </div>

    </div>

</div>
<!-- /.content-wrapper -->

@section Scripts{
    <script src="../../dist/plugins/select2/js/select2.full.min.js"></script>
    <script>$(function () {
            $('.select2').select2()

        })</script>
}